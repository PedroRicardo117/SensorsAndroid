<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GyroActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="552dp"
        android:gravity="center"
        android:text="Giroscópio"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="356dp"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Posição X:" />

        <TextView
            android:id="@+id/giroX"
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text=""/>

        <TextView
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Posição Y:" />

        <TextView
            android:id="@+id/giroY"
            android:layout_width="117dp"
            android:layout_height="44dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Posição Z:" />

        <TextView
            android:id="@+id/giroZ"
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="" />


    </GridLayout>

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="587dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="106dp"
        android:background="@android:color/holo_red_light"
        android:shadowColor="#000000"
        android:text="Retornar"
        android:textColor="#ffffff"
        android:textColorHighlight="#00000000"
        android:textColorHint="#000000"
        android:textColorLink="#F80000" />
</RelativeLayout>